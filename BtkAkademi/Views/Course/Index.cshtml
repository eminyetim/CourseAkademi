@model IEnumerable<Candidate>

@if(Model.Count()>0)
{
    <h6 class="display-6">
        Application(@Model.Count())
    </h6>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <td>E-mail</td>
                <td>Full Name</td>
                <td>Apply At</td>
                <td>Course</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Email</td>
                    <td>@item.FullName</td>
                    <td>@item.ApplyAt</td>
                    <td>@item.SelectedCourse</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        There is no application. Please click here to 
        <a class="alert-link" asp-action="apply" >apply.</a>
    </div>
}